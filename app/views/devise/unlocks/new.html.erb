<main class="form-signin">
  <div class="container h-100 align-middle m-auto">
    <div class="row justify-content-center">
      <div class="col-auto">
        <h2>
          <%= t('activerecord.devise.unlocks.new.resend_unlock_instructions') %>
        </h2>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row justify-content-center">
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 col-xxl-4">
          <%= f.label :email, class: 'form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>

      <div class="row justify-content-center mt-3">
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 col-xxl-5">
          <div class="actions">
            <%= f.submit t('activerecord.devise.unlocks.new.resend_unlock_instructions'), class: 'w-100 btn btn-lg btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 col-xxl-4">
        <div class="d-grid gap-2 col-12 mx-auto">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</main>
